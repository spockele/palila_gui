<QuestionnaireScreen>
	Label:
		id: top_text

        pos_hint: {'center_x': .5, 'y': .875}
        size_hint: 1., .1

		text: 'Please fill out this questionnaire: '

        font_size: 42
        text_size: .95 * self.size[0], self.size[1]
        valign: 'center'

        canvas.before:
        	Color:
        		rgba: (0 / 255, 166 / 255, 214 / 255, .7)

        	Rectangle:
        		size: self.size
        		pos: self.pos

	QQuestionManager:
		id: question_manager

        pos_hint: {'center_x': .5, 'y': .17}
        size_hint: .95, .69

        orientation: 'vertical'
        spacing: 10
