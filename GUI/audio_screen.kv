<AQuestionManager>:
    spacing: 20
    orientation: 'vertical'


<AudioQuestionScreen>:
    BoxLayout:
        pos_hint: {'center_x': .5, 'top': .98}
        size_hint: .95, .18

        orientation: 'vertical'
        spacing: 20

		BoxLayout:
			id: audio_managers

			size_hint_x: .7
			size_hint_y: .185

			orientation: 'horizontal'
			spacing: 10

			AudioManagerLeft:
				id: audio_manager_left

		Label:
			id: extra_message

			size_hint_y: .03

			text: ''

			color: 1, .5, .5, 1.

    AQuestionManager:
        id: question_manager

        pos_hint: {'center_x': .5, 'y': .15}
        size_hint: .9, .65
