<QuestionnaireQuestion>
	Label:
		id: question_text

		text: ''

		size_hint: .4, 1.
		pos_hint: {'x': 0., 'y': 0.}
		text_size: .95 * self.size[0], self.size[1]
		font_size: 36

		halign: 'right'
		valign: 'center'

		canvas.before:
			Color:
				rgba: .6, .6, .6, 1.
			Rectangle:
				size: self.size
				pos: self.pos


