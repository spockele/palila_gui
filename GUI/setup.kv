<Label>
    color: 0, 0, 0, 1
	disabled_color: 0, 0, 0, .5
    font_name: 'GUI/fonts/seguisb'
    font_size: 36
    line_height: 1.2


<Button>
    background_normal: 'gui/assets/Rounded_button_normal.png'
    background_down: 'gui/assets/Rounded_button_down.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    background_disabled_down: 'gui/assets/Rounded_button_disabled_down.png'
    border: 30, 30, 30, 30


<TextInput>
	background_normal: 'gui/assets/Rounded_button_normal.png'
	background_active: 'gui/assets/Rounded_textinput_active.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    border: 30, 30, 30, 30

	font_size: 36
	line_height: 1.2
	padding: [.02 * self.width, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6., 6.]


<ContinueButton>
	Image:
		id: continue_bttn_image
		source: ''
		opacity: 0
		size: self.parent.size
		pos: self.parent.pos

		canvas.before:
			PushMatrix
			Rotate:
				axis: 0, 0, 1
				angle: 0
				origin: self.center

		canvas.after:
			PopMatrix


<BackButton>
	text: ''

	Image:
		source: 'GUI/assets/arrow.png'
		size: self.parent.size
		pos: self.parent.pos

		canvas.before:
			PushMatrix
			Rotate:
				axis: 0, 0, 1
				angle: 180
				origin: self.center

		canvas.after:
			PopMatrix


<Screen>
    Image:
        size_hint: .1, .09
        pos_hint: {'x': .05, 'y': .02}
        source: 'GUI/assets/TUDelft_logo_descriptor_rgb.png'

    Image:
        fit_mode: 'contain'
        size_hint: .07, .09
        pos_hint: {'x': .88, 'y': .02}
        source: 'GUI/assets/PALILA.png'


<PalilaScreen>
	Label:
		id: continue_lbl
		text: 'Complete this screen before continuing'
		pos_hint: {'center_x': .5, 'y': .115}
		size_hint: .3, .05

    ContinueButton:
    	id: continue_bttn
        text: 'Continue'
        font_size: 48
        pos_hint: {'center_x': .5, 'y': .015}
        size_hint: .3, .1


<WelcomeScreen>
	BoxLayout:
		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2
		orientation: 'vertical'

		Label:
			id: welcome
			text: ''
			size_hint_y: .66

			text_size: self.size
			halign: 'left'
			valign: 'bottom'

		TextInput:
			id: pid_entry
			text: ''
			size_hint_y: .33

			multiline: False

			text_size: self.size

			on_text:
				self.parent.parent.check_lock(self.text)


<PartIntroScreen>
	ProgressBar:
		id: timer
		pos_hint: {'center_x': .5, 'y': .115}
		size_hint: .28, .01

	Label:
		id: intro_text
		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2
		text: ''
		text_size: self.size
		halign: 'center'
		valign: 'center'
