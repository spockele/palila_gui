<Label>:
    color: 0, 0, 0, 1
    font_name: 'Arial'
    font_size: 48
    line_height: 1.2


<Button>
    background_normal: 'gui/assets/background_normal.png'
    background_down: 'gui/assets/background_down.png'


<PalilaScreen>
	Label:
		id: continue_lbl
		text: ''
		color: (1, .2, .2, 1)
		font_size: 36
		pos_hint: {'center_x': .5, 'y': .115}
		size_hint: .3, .05

    ContinueButton:
    	id: continue_bttn
        text: 'Continue'
        pos_hint: {'center_x': .5, 'y': .015}
        size_hint: .3, .1

    Image:
        size_hint: .1, .09
        pos_hint: {'x': .05, 'y': .02}
        source: 'GUI/assets/TUDelft_logo_descriptor_rgb.png'

    Image:
        fit_mode: 'contain'
        size_hint: .07, .09
        pos_hint: {'x': .88, 'y': .02}
        source: 'GUI/assets/PALILA.png'

<WelcomeScreen>
	BoxLayout:
		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2
		orientation: 'vertical'

		Label:
			id: welcome
			text: ''
			size_hint_y: .66

			text_size: self.size
			halign: 'left'
			valign: 'bottom'

		TextInput:
			id: pid_entry
			text: ''
			size_hint_y: .33

			font_size: 48
			text_size: self.size
			line_height: 1.2
			valign: 'center'

			on_text:
				self.parent.parent.check_lock(self.text)
