<AudioManager>:
    orientation: 'vertical'
    Button:
        id: bttn

        size_hint_y: .8

        on_release:
            root.play()

        Image:
            id: bttn_image
            pos: self.parent.x + self.parent.size[0] * .1, self.parent.y + self.parent.size[1] * .1
            size: self.parent.size[0] * .8, self.parent.size[1] * .8
            fit_mode: 'contain'
            source: 'GUI/assets/play.png'

    ProgressBar:
        id: progress
        value: 0
        max: 1

        size_hint_y: .05

    Label:
        id: txt
        text: 'Press play to start sample'
        size_hint_y: .15

        canvas.before:
            Color:
                rgba: .6, .6, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size


<QuestionsLayout@BoxLayout>:
    spacing: 10
    orientation: 'horizontal'

    Widget:
        canvas:
            Color:
                rgba: .6, .6, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Widget:
        canvas:
            Color:
                rgba: .6, .6, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size


<AudioQuestionScreen>:
    AudioManager:
        audio_path: 'GUI/assets/tone500Hz.wav'
        n_max: 5

        pos_hint: {'center_x': .5, 'center_y': .8}
        size_hint: .3, .3

    QuestionsLayout:
        pos_hint: {'center_x': .5, 'y': .11}
        size_hint: .95, .525
