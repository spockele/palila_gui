<AudioManager>:
    orientation: 'vertical'
    Button:
        id: bttn

        size_hint_y: .8

        on_release:
            root.play()

        Image:
            id: bttn_image
            pos: self.parent.x + self.parent.size[0] * .1, self.parent.y + self.parent.size[1] * .1
            size: self.parent.size[0] * .8, self.parent.size[1] * .8
            fit_mode: 'contain'
            source: 'GUI/assets/play.png'

    ProgressBar:
        id: progress
        value: 0
        max: 1

        size_hint_y: .05

    Label:
        id: txt
        text: ''
        size_hint_y: .15


<QuestionsLayout@BoxLayout>:
    spacing: 10
    orientation: 'horizontal'

    Widget:
        canvas:
            Color:
                rgba: .6, .6, .6, 1
            Rectangle:
                pos: self.pos
                size: self.size


<AudioQuestionScreen>:
    AudioManager:
        id: audio_manager
        pos_hint: {'center_x': .5, 'center_y': .8}
        size_hint: .3, .3

    QuestionsLayout:
        pos_hint: {'center_x': .5, 'y': .11}
        size_hint: .95, .525

    BoxLayout:
        id: navigation
        pos_hint: {'center_x': .5, 'y': .02}
        size_hint: .6, .07
        orientation: 'horizontal'

        Button:
            text: 'Back'
            size_hint_x: .45

        Widget:
            size_hint_x: .1

        Button:
            text: 'Continue'
            size_hint_x: .45
