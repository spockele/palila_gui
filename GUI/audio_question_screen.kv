<AudioManagerLeft>:
    orientation: 'horizontal'
    spacing: 10

    Button:
        id: bttn
		pos: self.pos[0], self.parent.y + self.parent.size[1] * .02
		size_hint_y: .95
        size_hint_x: .2

        on_release:
            root.play()

        Image:
            id: bttn_image
            pos: self.parent.x + self.parent.size[0] * .05, self.parent.y + self.parent.size[1] * .05
            size: self.parent.size[0] * .9, self.parent.size[1] * .9
            fit_mode: 'contain'
            source: 'GUI/assets/play.png'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .8

        Label:
            id: txt
            text: ''
            font_size: 42
            size_hint_y: .95
            text_size: .98 * self.size[0], self.size[1]
            halign: 'left'
            valign: 'bottom'

        ProgressBar:
            id: progress
            value: 0
            max: 1

            size_hint_y: .05


