<AudioManager>:
    orientation: 'horizontal'
    spacing: 10

    Button:
        id: bttn

        size_hint_x: .15

        on_release:
            root.play()

        Image:
            id: bttn_image
            pos: self.parent.x + self.parent.size[0] * .1, self.parent.y + self.parent.size[1] * .1
            size: self.parent.size[0] * .8, self.parent.size[1] * .8
            fit_mode: 'contain'
            source: 'GUI/assets/play.png'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .85

        Label:
            id: txt
            text: ''
            size_hint_y: .95
            text_size: .98 * self.size[0], self.size[1]
            halign: 'left'
            valign: 'bottom'

        ProgressBar:
            id: progress
            value: 0
            max: 1

            size_hint_y: .05


<QuestionManager>:
    spacing: 10
    orientation: 'vertical'


<AudioQuestionScreen>:
    BoxLayout:
        pos_hint: {'center_x': .5, 'y': .13}
        size_hint: .95, .85
        orientation: 'vertical'
        spacing: 10

        AudioManager:
            id: audio_manager
            size_hint_y: .2

        QuestionManager:
            id: question_manager
            size_hint_y: .8
