<QuestionManager>:
    spacing: 20
    orientation: 'vertical'


<AudioQuestionScreen>:
    BoxLayout:
        pos_hint: {'center_x': .5, 'y': .165}
        size_hint: .95, .83
        orientation: 'vertical'
        spacing: 20

		BoxLayout:
			id: audio_managers
			size_hint_x: .7
			size_hint_y: .19
			orientation: 'horizontal'
			spacing: 10

			AudioManagerLeft:
				id: audio_manager_left

		Label:
			id: extra_message
			text: ''
			font_size: 32
			size_hint_y: .04
			color: 1, .5, .5, 1.

        QuestionManager:
            id: question_manager
            size_hint_y: .8
