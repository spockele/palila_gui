<AudioManager>:
    orientation: 'horizontal'
    spacing: 10

    Button:
        id: bttn
		pos: self.pos[0], self.parent.y + self.parent.size[1] * .02
		size_hint_y: .95
        size_hint_x: .2

        on_release:
            root.play()

        Image:
            id: bttn_image
            pos: self.parent.x + self.parent.size[0] * .05, self.parent.y + self.parent.size[1] * .05
            size: self.parent.size[0] * .9, self.parent.size[1] * .9
            fit_mode: 'contain'
            source: 'GUI/assets/play.png'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .8

        Label:
            id: txt
            text: ''
            font_size: 48
            size_hint_y: .95
            text_size: .98 * self.size[0], self.size[1]
            halign: 'left'
            valign: 'bottom'

        ProgressBar:
            id: progress
            value: 0
            max: 1

            size_hint_y: .05


<QuestionManager>:
    spacing: 20
    orientation: 'vertical'


<AudioQuestionScreen>:
    BoxLayout:
        pos_hint: {'center_x': .5, 'y': .16}
        size_hint: .95, .8
        orientation: 'vertical'
        spacing: 20

        AudioManager:
            id: audio_manager
            size_hint_y: .2
            size_hint_x: .7

        QuestionManager:
            id: question_manager
            size_hint_y: .8
