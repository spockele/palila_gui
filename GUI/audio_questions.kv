<AudioChoiceButton>:
    id: self.text


<AudioQuestion>
    orientation: 'vertical'
    spacing: 20

    Label:
        size_hint_y: .4
        id: question_text
        text: ''
        font_size: 48

        text_size: self.size
        halign: 'left'
        valign: 'bottom'

<AudioMCQuestion>
    BoxLayout:
    	pos_hint: {'center_x': .5}
    	size_hint_x: .95
        size_hint_y: .6

        id: answer_options
        orientation: 'horizontal'
        spacing: 20


<NumScaleQuestion>
    FloatLayout:
        size_hint_y: .6
        id: answer_options

        Label:
            pos_hint: {'x': 0, 'center_y': .5, }
            size_hint: .15, 1

            id: left_note
            text: 'left note'

            text_size: self.size
            font_size: 48
            halign: 'right'
            valign: 'center'

        Label:
            pos_hint: {'right': 1, 'center_y': .5, }
            size_hint: .15, 1

            id: right_note
            text: 'right note'

            text_size: self.size
			font_size: 48
            halign: 'left'
            valign: 'center'

        Widget:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: .65, .2

            canvas.after:
                Color:
                    rgba: .6, .6, .6, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [self.size[1] / 2.5]


<PointCompassQuestion>
    FloatLayout:
        size_hint_y: .8

        Image:
        	source: 'GUI/assets/compass.png'
        	size_hint_y: .5
        	pos_hint: {'center_x': .5, 'center_y': .5}
        	color: 1, 1, 1, .25

        AudioChoiceButton:
        	pos_hint: {'center_x': .5, 'center_y': .855}
        	size_hint: None, .2
        	width: self.height

			id: choice_f
        	text: 'front'
        	color: 0, 0, 0, 0
        	disabled_color: 0, 0, 0, 0

			canvas.before:
				PushMatrix
				Rotate:
					axis: 0, 0, 1
					angle: 90
					origin: self.center

			canvas.after:
				PopMatrix

			Image:
				source: 'GUI/assets/arrow.png'
				size: self.parent.size
				pos: self.parent.pos

		AudioChoiceButton:
