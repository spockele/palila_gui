<ChoiceButton>:
    id: self.text


<TextQuestion>
    Label:
        id: question_text
        text: ''

        text_size: self.size
        halign: 'left'
        valign: 'center'


<MultipleChoiceQuestion>
    orientation: 'vertical'
    spacing: 0

    Label:
        size_hint_y: .4

        id: question_text
        text: ''

        text_size: self.size
        halign: 'left'
        valign: 'bottom'

    BoxLayout:
    	pos_hint: {'center_x': .5}
    	size_hint_x: .95
        size_hint_y: .6

        id: answer_options
        orientation: 'horizontal'
        spacing: 20


<NumScaleQuestion>
    orientation: 'vertical'
    spacing: 0

    Label:
        size_hint_y: .4

        id: question_text
        text: ''

        text_size: self.size
        halign: 'left'
        valign: 'bottom'

    FloatLayout:
        size_hint_y: .6

        id: answer_options

        Label:
            pos_hint: {'x': 0, 'center_y': .5, }
            size_hint: .15, 1

            id: left_note
            text: 'left note'

            text_size: self.size
            halign: 'right'
            valign: 'center'

        Label:
            pos_hint: {'right': 1, 'center_y': .5, }
            size_hint: .15, 1

            id: right_note
            text: 'right note'

            text_size: self.size
            halign: 'left'
            valign: 'center'

        Widget:
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: .65, .2

            canvas.after:
                Color:
                    rgba: .6, .6, .6, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
