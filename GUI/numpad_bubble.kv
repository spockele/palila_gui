<NumPadBubble>
	size_hint: 1 * .3, 1.6 * 4/3 * .3
	pos_hint: {'center_x': .25, 'center_y': .5}
	show_arrow: False

	BubbleContent:
		background_image: 'gui/assets/Rounded_button_normal.png'
		border: 30, 30, 30, 30
		background_color: 1, 1, 1, .9

		orientation: 'vertical'
		spacing: 10

		padding: [10, 10, 10, 10, ]

		BoxLayout:
			orientation: 'horizontal'
			spacing: 10

			Button:
				text: '7'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '8'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '9'
				font_size: 96
				on_press: root.add_text(self.text)

		BoxLayout:
			orientation: 'horizontal'
			spacing: 10

			Button:
				text: '4'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '5'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '6'
				font_size: 96
				on_press: root.add_text(self.text)

		BoxLayout:
			orientation: 'horizontal'
			spacing: 10

			Button:
				text: '1'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '2'
				font_size: 96
				on_press: root.add_text(self.text)
			Button:
				text: '3'
				font_size: 96
				on_press: root.add_text(self.text)

		BoxLayout:
			orientation: 'horizontal'
			spacing: 10

			Button:
				text: '0'
				font_size: 96
				on_press: root.add_text(self.text)

			Button:
				text: ''
				font_size: 96
				on_press: root.remove_text()
				Image:
					source: 'GUI/assets/arrow.png'
					size: .5 * self.parent.size[0], .5 * self.parent.size[1]
					pos: self.parent.pos[0] + .25 * self.parent.size[0], self.parent.pos[1] + .25 * self.parent.size[1]
					canvas.before:
						PushMatrix
						Rotate:
							axis: 0, 0, 1
							angle: 180
							origin: self.center
					canvas.after:
						PopMatrix
