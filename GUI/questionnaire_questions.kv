<QuestionnaireQuestion>
	Label:
		id: question_text

		text: ''
		font_size: 32

		size_hint: root.text_width, 1.
		pos_hint: {'x': 0., 'y': 0.}
		text_size: .95 * self.size[0], self.size[1]

		halign: 'right'
		valign: 'center'

	Widget:
		size: root.size
		pos: root.pos

		canvas:
			Color:
				rgba: root.bordercolor
			Line:
				points: self.x, self.y - .05 * self.height, self.x + self.width, self.y - .05 * self.height
				width: 1.5


<FreeNumberQQuestion>
	FreeNumberTextInput:
		id: number_input
		text: ''

		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}

		multiline: False

		on_text:
			root.number_input()

	Label:
		id: number_overlay
		text: 'Enter a number here'
		color: (.7, .7, .7, 1.)

		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}
		text_size: .96 * self.size[0], self.size[1]
		halign: 'left'
		valign: 'center'


<FreeTextQQuestion>
	TextInput:
		id: text_input
		text: ''

		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}

		on_text:
			root.text_input()

	Label:
		id: text_overlay
		text: 'Enter your answer here'
		color: (.7, .7, .7, 1.)

		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}
		text_size: .96 * self.size[0], self.size[1]
		halign: 'left'
		valign: 'center'


<Dropdown>
	auto_width: False
	width: '900dp'

<SpinnerOption>
	text_size: .95 * self.size[0], self.size[1]
	halign: 'left'
	valign: 'center'
	height: '70dp'
	background_color: .95, .988, 1., 1.

<SpinnerQQuestion>
	Spinner:
		id: spinner

		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}
		text_size: .96 * self.size[0], self.size[1]
		halign: 'left'
		valign: 'center'

		on_text:
			root.spinner_input()

		Image:
			source: 'GUI/assets/arrow.png'
			size: .1 * self.parent.size[0], .7 * self.parent.size[1]
			pos: self.parent.pos[0] + .9 * self.parent.size[0], self.parent.pos[1] + .15 * self.parent.size[1]

			canvas.before:
				PushMatrix
				Rotate:
					axis: 0, 0, 1
					angle: -90
					origin: self.center

			canvas.after:
				PopMatrix


<MultipleChoiceQQuestion>:
	BoxLayout:
		id: question_input

		orientation: 'horizontal'
		spacing: 10
		size_hint: root.answer_width, 1.
		pos_hint: {'right': 1, 'y': 0.}
