<Label>
	markup: True
	font_size: 32
    color: 0, 0, 0, 1
	disabled_color: 0, 0, 0, .5
    font_name: 'GUI/fonts/seguisb'
    line_height: 1.2


<Button>
    background_normal: 'gui/assets/Rounded_button_normal.png'
    background_down: 'gui/assets/Rounded_button_down.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    background_disabled_down: 'gui/assets/Rounded_button_disabled_down.png'
    border: 30, 30, 30, 30

<TextInput>
	font_size: 32

	background_normal: 'gui/assets/Rounded_button_normal.png'
	background_active: 'gui/assets/Rounded_textinput_active.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    border: 30, 30, 30, 30

	line_height: 1.2
	padding: [.02 * self.width, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6., 6.]

<Dropdown>
	auto_width: False
	width: '700dp'

<SpinnerOption>
	text_size: .95 * self.size[0], self.size[1]
	halign: 'left'
	valign: 'center'
	height: '50dp'
	background_color: .95, .988, 1., 1.


<WelcomeScreen>
	BoxLayout:
		pos_hint: {'center_x': .5, 'center_y': .5}
		size_hint: .7, .25

		orientation: 'vertical'

		Label:
			id: welcome

			size_hint_y: .66

			text: ''

			text_size: self.size
			halign: 'left'
			valign: 'bottom'

		TextInput:
			id: pid_entry

			size_hint_y: .33

			text: ''

			multiline: False
			text_size: self.size


<EndScreen>
	Label:
		pos_hint: {'center_x': .5, 'center_y': .5}
		size_hint: .7, .25

		text: 'You have reached the end of the experiment.\nYou can return to the first questionnaire to check your answers.\nOr you can finish the experiment.'

		font_size: 42
		text_size: self.size
		halign: 'center'
		valign: 'center'


<FinalScreen>
	Label:
		id: goodbye

		pos_hint: {'center_x': .5, 'center_y': .5}
		size_hint: .7, .25

		text: ''

		font_size: 42
		text_size: self.size
		halign: 'center'
		valign: 'center'


<TimedTextScreen>
	ProgressBar:
		id: timer

		pos_hint: {'center_x': .5, 'y': 0}
		size_hint: .5, .01

	Label:
		id: intro_text

		pos_hint: {'center_x': .5, 'center_y': .5}
		size_hint: .7, .85

		text: ''

		font_size: 42
		text_size: self.size
		halign: 'left'
		valign: 'center'
