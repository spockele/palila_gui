<Label>
	markup: True
	font_size: 32
    color: 0, 0, 0, 1
	disabled_color: 0, 0, 0, .5
    font_name: 'GUI/fonts/seguisb'
    line_height: 1.2


<Button>
    background_normal: 'gui/assets/Rounded_button_normal.png'
    background_down: 'gui/assets/Rounded_button_down.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    background_disabled_down: 'gui/assets/Rounded_button_disabled_down.png'
    border: 30, 30, 30, 30


<TextInput>
	font_size: 32

	background_normal: 'gui/assets/Rounded_button_normal.png'
	background_active: 'gui/assets/Rounded_textinput_active.png'
    background_disabled_normal: 'gui/assets/Rounded_button_disabled_normal.png'
    border: 30, 30, 30, 30

	line_height: 1.2
	padding: [.02 * self.width, self.height / 2.0 - (self.line_height / 2.0) * len(self._lines), 6., 6.]


<ContinueButton>
	text: ''

	text_size: self.size
	valign: 'center'
	halign: 'center'

	Image:
		id: continue_bttn_image

		pos: self.parent.pos
		size: self.parent.size

		source: ''
		opacity: 0

		canvas.before:
			PushMatrix
			Rotate:
				axis: 0, 0, 1
				angle: 0
				origin: self.center

		canvas.after:
			PopMatrix


<BackButton>
	text: ''

	text_size: self.size
	valign: 'center'
	halign: 'center'

	Image:
		id: back_bttn_image

		pos: self.parent.pos
		size: self.parent.size

		source: ''
		opacity: 0

		canvas.before:
			PushMatrix
			Rotate:
				axis: 0, 0, 1
				angle: 180
				origin: self.center

		canvas.after:
			PopMatrix


<Screen>
    Image:
        pos_hint: {'x': .05, 'y': .05}
        size_hint: .1, .09

        source: 'GUI/assets/TUDelft_logo_descriptor_rgb.png'

    Image:
        pos_hint: {'x': .88, 'y': 0.05}
        size_hint: .07, .09

        fit_mode: 'contain'
        source: 'GUI/assets/PALILA.png'


<PalilaScreen>
	Label:
		id: continue_lbl

		pos_hint: {'center_x': .5, 'y': .1}
		size_hint: .3, .05

		text: 'Complete this screen before continuing'

    ContinueButton:
    	id: continue_bttn

        pos_hint: {'center_x': .5, 'y': 0.01}
        size_hint: .3, .1

        text: 'Continue'

        font_size: 42


<WelcomeScreen>
	BoxLayout:
		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2

		orientation: 'vertical'

		Label:
			id: welcome

			size_hint_y: .66

			text: ''

			text_size: self.size
			halign: 'left'
			valign: 'bottom'

		TextInput:
			id: pid_entry

			size_hint_y: .33

			text: ''

			multiline: False
			text_size: self.size

			on_text:
				self.parent.parent.check_lock(self.text)


<EndScreen>
	Label:
		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2

		text: 'You have reached the end of the experiment questions.\nYou can return to the first questionnaire to check your answers.\nOr you can finish the experiment.'

		font_size: 42
		text_size: self.size
		halign: 'center'
		valign: 'center'


<FinalScreen>
	Label:
		id: goodbye

		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .2

		text: ''

		font_size: 42
		text_size: self.size
		halign: 'center'
		valign: 'center'


<TimedTextScreen>
	ProgressBar:
		id: timer

		pos_hint: {'center_x': .5, 'y': .115}
		size_hint: .28, .01

	Label:
		id: intro_text

		pos_hint: {'center_x': .5, 'center_y': .6}
		size_hint: .7, .7

		text: ''

		font_size: 42
		text_size: self.size
		halign: 'left'
		valign: 'center'
