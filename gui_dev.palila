[part 1]
	randomise = no

	[[breaks]]
		text = 'Breaks can be put at the end of each part.'
		interval = 0
		time = 1

	[[intro]]
		text = '''This is the first part of the PALILA GUI demo. This part showcases audio's with common questions. It also shows multi-audio screens and the replay ability.
		Press continue, once available, to resume the experiment...'''
		time = 1

	[[questions]]
		[[[question 1]]]
			type = IntegerScale
			text = 'How good is this question. Please indicate on this scale from 0 to 7.'

			min = 0
			max = 7

			left note = 'Very Bad'
			right note = 'Very Good'

		[[[question 2]]]
			type = IntegerScale
			text = 'How good is this question. Please indicate on this scale from 0 to 10.'

			min = 0
			max = 10

	[[audio 0]]
		filename = 'prototyping_placeholder.wav'
		repeat = 2

	[[audio 1]]
		filename = 'prototyping_placeholder.wav'
		filename_2 = 'prototyping_placeholder.wav'

	[[audio 2]]
		filename = 'prototyping_placeholder.wav'
		max replays = 5

	[[questionnaire]]
		[[[question 1]]]
			id = 'showcase'
			text = '''This is an optional questionnaire
				at the end of a part: '''
			type = MultipleChoice
			choices = 'Ok', 'Understood'

			dependant = 'showcase_dep'
			dependant condition = 'Ok'

		[[[question 2]]]
			id = 'showcase_dep'
			text = 'This question is dependant on the previous one: '
			type = MultipleChoice
			choices = 'Ok', 'Understood'


[part 2]
	randomise = no

	[[intro]]
		text = '''This is the second part of the PALILA GUI demo.
			This part showcases most options in questions.
			Press continue, once available, to resume the experiment...'''
		time = 1

	[[breaks]]
		text = 'Breaks can also be put at an interval.'
		interval = 2
		time = 1

	[[audio 0]]
		filename = 'prototyping_placeholder.wav'
		repeat = 2

		[[[question 0]]]
			type = Text
			text = '''This is just text, no question asked.
				If only a text is present, the continue button unlocks after playing audio. Use it wisely.
				The next screens will showcase all question types.'''

	[[audio 1]]
		filename = 'prototyping_placeholder.wav'

		[[[question mc]]]
			text = '''This here is a multiple choice question.
				Do you like it?'''
			type = MultipleChoice
			choices = 'Yes', 'No', 'Not Sure'

		[[[question sp]]]
			text = '''This here is a spinner question.
				Do you like it?'''
			type = Spinner
			choices = 'Yes', 'No', 'Not Sure', 'Yes, but better', 'No, but worse', 'Prefer not to Answer'

	[[audio 2]]
		filename = 'prototyping_placeholder.wav'

		[[[question mc]]]
			text = '''This here is a multiple choice question.
				Do you like it?'''
			type = MultipleChoice
			choices = 'Yes', 'No', 'Not Sure'

			dependant = 'mcc'
			dependant condition = 'Yes'

		[[[question mcc]]]
			text = '''This here is a question, dependant on the answer of the above.
				Do you like it?'''
			type = MultipleChoice
			choices = 'Yes', 'No', 'Not Sure'

	[[audio 3]]
		filename = 'prototyping_placeholder.wav'

		[[[question sl]]]
			text = '''This here is a slider question.
				On a scale from 0 to 10, how nice is it?'''
			type = Slider

			min = 0
			max = 10
			step = .5

		[[[question sln]]]
			text = '''This here is a slider question. With side notes this time.
				On a scale from 0 to 10, how nice is it?'''
			type = Slider

			min = 0
			max = 10
			step = .5

			left note = 'Not so'
			right note = 'Very'

	[[audio 4]]
		filename = 'prototyping_placeholder.wav'

		[[[question dir]]]
			text = 'This is a compass questions, where participants can enter a direction in 8 points.'
			type = PointCompass
